---

<style>
  #info {
    font-size: 15px;
    color: #6e6e6e;    
  }
</style>

<html lang="ja">
  <head>
    <BaseHead title="pubs - abnoumaru.com" description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <section>

    </section>
    <main>
      <section>
        <p>🗣 登壇</p>
        {
          talks.map(([date, title, event, link]) => (
            <p>
              <div id="title">
                <a href={link}>{title}</a>
              </div>
              <div id="info">
                {date} ＠ {event}
              </div>
            </p>
          ))
        }
      </section>
      <section>
        <p>📚 執筆</p>
        {
          writings.map(([date, title, link]) => (
            <p>
              <div id="title">
                <a href={link}>{title}</a>
              </div>
              <div id="info">
                {date}
              </div>
            </p>
          ))
        }
      </section>
    </main>
    <Footer />
  </body>
</html>
