---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import "../../styles/pagelist.css";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// „Çø„Ç∞„ÅÆ‰∏ÄË¶ß„ÇíÂèñÂæó
const tags = [...new Set(posts.flatMap(post => post.data.tags))].sort();
---

<BaseLayout title="blog - abnoumaru.com" description={SITE_DESCRIPTION}>
  <section class="post-list">
    <h2 class="section-title">üìô Ë®ò‰∫ã‰∏ÄË¶ß</h2>
    
    <div class="tags-container">
      <p>„Çø„Ç∞„ÅßÁµû„ÇäËæº„Åø:</p>
      <div class="tags">
        {tags.map(tag => (
          <a href={`/tags/${tag}`} class="tag">#{tag}</a>
        ))}
      </div>
    </div>
    
    <ul>
      {
        posts.map((post) => (
          <li>
            <a href={`/blog/${post.slug}/`}>
              <p class="title">{post.data.title}</p>
              <p class="date">
                <FormattedDate date={post.data.pubDate} />
                {post.data.tags && (
                  <span class="post-tags">
                    {post.data.tags.map((tag: string) => (
                      <span class="post-tag">#{tag}</span>
                    ))}
                  </span>
                )}
              </p>
            </a>
          </li>
        ))
      }
    </ul>
  </section>
</BaseLayout>

<style>
  .tags-container {
    margin: 2rem 0;
  }
  
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .tag {
    display: inline-block;
    padding: 0.3rem 0.5rem;
    background-color: rgba(var(--gray-light), 0.3);
    border-radius: 4px;
    font-size: 0.8rem;
    transition: background-color 0.3s ease;
  }
  
  .tag:hover {
    background-color: var(--accent-blue);
    color: white;
    transform: translateY(-2px);
  }
  
  .post-tags {
    display: inline-flex;
    gap: 0.5rem;
    margin-left: 1rem;
  }
  
  .post-tag {
    font-size: 0.75rem;
    color: var(--accent-blue);
  }
</style>
