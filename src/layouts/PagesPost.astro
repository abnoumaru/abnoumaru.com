---
import type { CollectionEntry } from "astro:content";
import BaseLayout from "./BaseLayout.astro";
import Comment from "../components/Comment.astro";
import FormattedDate from "../components/FormattedDate.astro";
import { Icon } from "astro-icon/components";
import { SHARE_BUTTONS } from "../consts";
import "../styles/blog-post.css";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
const pageUrl = Astro.url.href;
const encodedUrl = encodeURIComponent(pageUrl);
const encodedTitle = encodeURIComponent(title);

// シェアボタンの設定をconsts.tsから取得し、URL生成
const shareButtons = SHARE_BUTTONS.map((button) => {
  let url = "";

  if (button.name === "hatena") {
    url = `${button.baseUrl}${pageUrl}`;
  } else if (button.name === "x") {
    url = `${button.baseUrl}?url=${encodedUrl}&text=${encodedTitle}`;
  }

  return {
    ...button,
    url,
  };
});
---

<BaseLayout title={title} description={description} image={heroImage}>
  <article>
    <div class="hero-image">
      {
        heroImage && (
          <img width={1020} height={510} src={heroImage} alt={title} loading="lazy" decoding="async" />
        )
      }
    </div>
    <div class="prose">
      <div class="title">
        <div class="date">
          <FormattedDate date={pubDate} />
          {
            updatedDate && (
              <div class="last-updated-on">
                最終更新日: <FormattedDate date={updatedDate} />
              </div>
            )
          }
        </div>
        <h1>{title}</h1>
        <hr />
      </div>
      <slot />

      <div class="share-buttons">
        {
          shareButtons.map((button) => (
            <a href={button.url} target="_blank" rel="noopener" aria-label={button.ariaLabel} class={`share-button ${button.name}-button`} style={`--bg-color: ${button.bgColor}; --hover-bg-color: ${button.hoverBgColor};`} >
              <Icon name={button.icon} />
            </a>
          ))
        }
      </div>

      <Comment />
    </div>
  </article>
</BaseLayout>

<style>
  .share-buttons {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin: 2rem 0;
    padding: 1rem 0;
    border-top: 1px solid rgba(var(--gray-light), 0.2);
    border-bottom: 1px solid rgba(var(--gray-light), 0.2);
  }

  .share-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    transition: all 0.2s ease;
    border: none;
    background-color: var(--bg-color);
    color: white;
  }

  .share-button:hover {
    background-color: var(--hover-bg-color);
    transform: translateY(-2px);
    border: none;
  }
</style>
