---
interface Props {
  date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()} class="formatted-date">
  {
    date.toLocaleDateString("ja-JP", {
      year: "numeric",
      month: "2-digit",
      day: "2-digit",
    })
  }
</time>

<style>
  .formatted-date {
    font-variant-numeric: tabular-nums;
  }
</style>
