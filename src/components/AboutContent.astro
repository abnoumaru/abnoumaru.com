---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

const interests = ["🏃‍♂️ Ops", "🦎 SRE", "🔭 O11y"];

const careers = [
  ["2024/10", "", "iv", "Engineer（SRE）", "❔"],
  [
    "2020/05",
    "2024/09",
    "th",
    "IT Infrastructure Engineer（SRE）",
    "③ 3-shake Inc.",
  ],
  [
    "2016/04",
    "2020/04",
    "hb",
    "Operations Engineer",
    "🐝 HEARTBEATS Corporation",
  ],
  [
    "2012/10",
    "2016/03",
    "hb",
    "Part-time Operations Engineer",
    "🐝 HEARTBEATS Corporation",
  ],
];

const educations = [
  [
    "2012/04",
    "2016/03",
    "uec",
    "Bachelor of Engineering",
    "⚡ The University of Electro-Communications",
  ],
];

const hobbies = ["📻", "🌸", "☔", "🍜"];
---

<style>
  #uec {
    background: linear-gradient(45deg, #17288b, #17288b);
    -webkit-background-clip: text;
    color: transparent;
    display: inline-block;
  }
  #hb {
    background: linear-gradient(45deg, #ff7f00, #ff7f00);
    -webkit-background-clip: text;
    color: transparent;
    display: inline-block;
  }
  #th {
    background: linear-gradient(45deg, #deac28, #29a87f, #2b9ac2);
    -webkit-background-clip: text;
    color: transparent;
    display: inline-block;
  }
  #iv {
    background: linear-gradient(45deg, #0c965a, #a8d282);
    -webkit-background-clip: text;
    color: transparent;
    display: inline-block;
  }
</style>

<html lang="ja">
  <head>
    <BaseHead title="about - abnoumaru.com" description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <h2>👤 ID</h2>
      <p>🤟 abnoumaru 🤟</p>
      <h2>👀 Interests</h2>
      <p>
        {
          interests.map((interest, index) => (
            <span>
              {interest}
              {index < interests.length - 1 && " / "}
            </span>
          ))
        }
      </p>
      <h2>📝 Career</h2>
      {
        careers.map((career) => (
          <p>
            <div>
              {career[0]} - {career[1]}
            </div>
            <div>
              <span id={career[2]}>
                {career[3]} <br />
                --- {career[4]}
              </span>
            </div>
          </p>
        ))
      }

      <h2>🎓 Educations</h2>
      {
        educations.map((education) => (
          <p>
            <div>
              {education[0]} - {education[1]}
            </div>
            <div>
              <span id={education[2]}>
                {education[3]} <br />
                --- {education[4]}
              </span>
            </div>
          </p>
        ))
      }

      <h2>🎴 Hobbies</h2>
      <p>
        {
          hobbies.map((hobby, index) => (
            <span>
              {hobby}
              {index < hobbies.length - 1 && " / "}
            </span>
          ))
        }
      </p>
      <h2>📧 Contact Address</h2>
      <p>me [at] abnoumaru [dot] com</p>
    </main>
    <Footer />
  </body>
</html>
